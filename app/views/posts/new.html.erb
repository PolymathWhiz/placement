<div class="wrapper">
  <%= render  "shared/sidebar" %>
    <div class="main-panel">
      <%= render  "shared/employer_nav" %>
        <div class="content">
          <div class="container-fluid">
            <div class="row">
              <div class="col-md-3"></div>
              <div class="col-md-6">
                <div class="card">
                  <div class="card-header">
                    <h4 class="title">Post a position</h4>
                  </div>
                  <%= form_for @post do |f|%>
                    <div class="card-content">
                      <div class="form-group label-floating is-empty">
                        <label class="control-label">Title</label>
                        <%= f.text_field :title, class: 'form-control' %>
                      </div>
                    </div>
                    <div class="card-content">
                      <div class="form-group label-floating is-empty">
                        <label class="control-label">Description</label>
                        <%= f.text_area :description, class: 'form-control' %>
                      </div>
                    </div>
                    <div class="card-content">
                      <div class="form-group label-floating">
                        <label class="control-label">Role</label>
                        <%= f.select :role, options_for_select(roles),{include_blank: true},{class: 'form-control'} %>
                      </div>
                    </div>
                    <div class="card-content">
                      <div class="form-group label-floating is-empty">
                        <label class="control-label">Requirement (Each on a new line)</label>
                        <%= f.text_area :requirement, class: 'form-control' %>
                      </div>
                    </div>
                    <div class="card-content">
                      <div class="form-group label-floating is-empty">
                        <label class="control-label">Title</label>
                        <%= f.text_field :responsibilities, class: 'form-control' %>
                      </div>
                    </div>
                    <div class="card-content">
                      <div class="form-group label-floating is-empty">
                        <label class="control-label">Title</label>
                        <%= f.text_field :title, class: 'form-control' %>
                      </div>
                    </div>
                    <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>
</div>