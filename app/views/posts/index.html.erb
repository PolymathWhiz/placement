<div class="wrapper">
  <%= render "shared/sidebar" %>
  <div class="main-panel">
    <%= render "shared/employer_nav" %>
    <div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="card card-plain">
              <div class="card-header">
                <h4 class="title">Published Openings</h4>
              </div>
              <div class="card-content table-responsive">
                <table class="table table-hover">
                  <thead>
                  <th>ID</th>
                  <th>Job Title</th>
                  <th>Job Position</th>
                  <th>Date Posted</th>
                  <th>Post Expires</th>
                  <th>Action</th>
                  </thead>
                  <tbody>
                  <% @posts.each_with_index do |post, index| %>
                    <% index += 1 %>
                    <tr>
                      <td> <%= index %></td>
                      <td><%= post.title %></td>
                      <td><%= selected_role(post.position_type) %></td>
                      <td><%= format_date(post.created_at) %></td>
                      <td><%= format_date(post.application_ends) %></td>
                      <td>
                        <button class="btn btn-success btn-sm">
                          <i class="material-icons">edit</i>
                        </button>

                        <a href="<%= post_path(post.id) %>" class="btn btn-danger btn-sm" data-method="delete" rel="nofollow">
                          <i class="material-icons">delete</i>
                        </a>
                      </td>
                    </tr>
                  <% end %>
                  </tbody>
                </table>

                <% if @post_count < 1 %>
                  <h4 class="text-center text-danger" style="margin-top: 30px;">No data available</h4>
                  <!--<a href="<%= new_post_path %>" class="btn btn-primary btn-sm">Create new opening</a>-->
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>