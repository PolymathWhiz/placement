<div class="wrapper">
  <%= render  "shared/sidebar" %>

    <div class="main-panel">
      <%= render  "shared/employer_nav" %>

        <div class="content">
          <div class="container-fluid">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

              <div class="row">
                <div class="col-md-8">
                  <%= render  "shared/error_message", object: f.object %>
                    <div class="card">
                      <div class="card-header">
                        <h4 class="title">Edit Profile</h4>
                        <p class="category">Complete your profile</p>
                      </div>
                      <div class="card-content">


                        <div class="row">
                          <div class="col-md-5">
                            <div class="form-group label-floating">
                              <label class="control-label">Company Name</label>
                              <%= f.text_field :company_name, class: 'form-control', disabled: true %>
                            </div>
                          </div>
                          <div class="col-md-3">
                            <div class="form-group label-floating">
                              <label class="control-label">Username</label>
                              <%= f.text_field :username, class: 'form-control', disabled: true %>
                            </div>
                          </div>
                          <div class="col-md-4">
                            <div class="form-group label-floating">
                              <label class="control-label">Email</label>
                              <%= f.email_field :email, class: 'form-control' %>
                            </div>
                          </div>
                        </div>

                        <div class="row">
                          <div class="col-md-12">
                            <div class="form-group label-floating">
                              <label class="control-label">Address</label>
                              <%= f.text_area :address, class: 'form-control' %>
                            </div>
                          </div>
                        </div>

                        <div class="row">
                          <div class="col-md-4">
                            <div class="form-group label-floating">
                              <label class="control-label">City</label>
                              <%= f.select :city, options_for_select(regions, selected: @employer.city),{include_blank: true},{class: 'form-control'} %>
                            </div>
                          </div>

                          <div class="col-md-4">
                            <div class="form-group label-floating">
                              <label for="phone_number" class="control-label">Phone Number</label>
                              <%= f.phone_field :phone_number, class: 'form-control'%>
                            </div>
                          </div>

                          <div class="col-md-4">
                            <div class="form-group label-floating">
                              <label class="control-label">Industry</label>
                              <%= f.select :industry, options_for_select(industries, selected: @employer.industry),{include_blank: true},{class: 'form-control'} %>
                            </div>
                          </div>
                        </div>

                        <div class="row">
                          <div class="col-md-6">
                            <div class="form-group label-floating">
                              <label class="control-label">Website</label>
                              <%= f.url_field :website, class: 'form-control' %>
                            </div>
                          </div>

                          <div class="col-md-6">
                            <div class="form-group label-floating">
                              <label for="phone_number" class="control-label">Twitter</label>
                              <%= f.text_field :twitter, class: 'form-control'%>
                            </div>
                          </div>
                        </div>

                        <div class="row">
                          <div class="col-md-12">
                            <div class="form-group">
                              <label>About Company</label>
                              <div class="form-group label-floating">
                                <%= f.text_area :about, class: 'form-control', rows: 3, placeholder: 'Information about your organization'%>
                              </div>
                            </div>
                          </div>
                        </div>

                        <div class="row">
                          <div class="col-md-12">
                            <div class="form-group label-floating">
                              <label class="control-label">Current Password
                                <span style="color: red; font-size: 10px;"> This is required to edit information</span>
                              </label>
                              <%= f.password_field :current_password, class: 'form-control' %>
                            </div>
                          </div>
                        </div>

                        <%= f.submit 'Update Profile', class: 'btn btn-primary pull-right'%>
                          <div class="clearfix"></div>
                          <% end %>
                      </div>
                    </div>
                </div>
                <div class="col-md-4">
                  <div class="card card-profile">
                    <div class="card-avatar">
                      <a href="#">
                        <%= image_tag  "avatar.png", class: "img" %>
                      </a>
                    </div>

                    <div class="content">
                      <h4 class="card-title">
                        <%= employer_name(@employer)%>
                      </h4>
                      <p class="card-content">
                        <%= about_employer(@employer) %>
                      </p>
                    </div>
                  </div>
                </div>
              </div>
          </div>


          <footer class="footer">
            <div class="container-fluid">
              <p class="copyright text-center">
                Copyright &copy;
                <script>
                  document.write(new Date().getFullYear());
                </script>.

                <b>Maplerad</b>

              </p>
            </div>
          </footer>
        </div>
    </div>